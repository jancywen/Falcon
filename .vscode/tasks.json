{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-I",
                "/usr/local/mysql-connector-c++-8.0.21/include",
                "-L",
                "/usr/local/mysql-connector-c++-8.0.21/lib64",
                "-l",
                "crypto.1.1",
                "-l",
                "ssl.1.1",
                "-l",
                "mysqlcppconn.7.8.0.21",
                "-l",
                "mysqlcppconn8-static",
                "-l",
                "mysqlcppconn8.2.8.0.21",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}